<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">こちらにご投稿お願いします。</h2>
        <%# 部分テンプレートでフォームを表示する %>
    </div>
  </div>
</div>


<%= form_with url: tweet_index_path, model: @tweet, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, id:"tweet_title" %>
  </div>

  <div class="field">
    <%= f.label :nickname, "ニックネーム" %><br />
    <%= f.text_field :nickname, class: :form__text, id:"tweet_nickname" %>
  </div>

  <div class="field">
    <%= f.label :concept, "コンセプト" %><br />
    <%= f.text_area :concept, class: :form__text, id:"tweet_concept" %>
  </div>

  <div class="field">
    <%= f.label :image, "投稿画像" %><br />
    <%= f.file_field :image, id:"tweet_image" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>